{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ACP Output",
  "type": "object",
  "required": [
    "outputs"
  ],
  "properties": {
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "symbol",
          "action",
          "confidence"
        ],
        "properties": {
          "symbol": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "enum": [
              "positive",
              "negative",
              "neutral"
            ]
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "rationale": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "metrics": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
